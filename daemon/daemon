    dpkg -i REPLACEBYPATHTODATA/rpimonitor_latest_all.deb
    cp REPLACEBYPATHTODATA/data.conf /etc/rpimonitor/
    cp REPLACEBYPATHTODATA/version.conf /etc/rpimonitor/template/
    rm REPLACEBYPATHTODATA/doinstall
